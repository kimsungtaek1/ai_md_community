# App
PORT=8080
JUDGE_MODE=auto
OPENAI_MODEL=gpt-4.1-mini
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_API_KEY=
JSON_BODY_LIMIT=15mb
AI_MD_UPLOAD_TOKEN=
AI_IMAGE_PROVIDER=pollinations
POLLINATIONS_API_BASE=https://image.pollinations.ai
POLLINATIONS_MODEL=flux
LOCAL_SD_API_BASE=http://127.0.0.1:7860
LOCAL_SD_STEPS=24
LOCAL_SD_CFG_SCALE=6.5
LOCAL_SD_SAMPLER=DPM++ 2M Karras
AI_MD_TRY_3_IMAGES=true
AI_MD_REQUIRE_3_IMAGES=false
AI_MD_WRITE_BACK_IMAGES=true

# CORS (for GitHub Pages or separate frontend domain)
CORS_ORIGIN=*

# ─── Database Driver ───
# DB_DRIVER=sqlite|postgres (auto-detected: postgres if DATABASE_URL is set)
# DB_DRIVER=postgres

# ─── PostgreSQL (Render / production) ───
# DATABASE_URL=postgres://ai_md:password@host:5432/ai_md_community
# DB_SSL=false   # set to false for local/Docker PostgreSQL without SSL

# ─── SQLite (local development fallback) ───
SQLITE_PATH=./data/app.db
# PERSISTENT_STORAGE_ROOT=/var/data
# REQUIRE_PERSISTENT_SQLITE=false

# ─── Docker Compose PostgreSQL service ───
POSTGRES_DB=ai_md_community
POSTGRES_USER=ai_md
POSTGRES_PASSWORD=ai_md_password
